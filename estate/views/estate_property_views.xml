<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </div>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>

                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                        <field name="garden_orientation"/>
                                        <field name="state"/>
                                        <field name="active"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Other Info">
                                <group>
                                    <field name="user_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>

                            <page string="Offers">
                                <field name="offer_ids"/>
                            </page>

                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="property_type_id"/>
                <separator/>
                <filter string="Available"
                        name="filter_available" domain="[('state', 'in', ('new', 'offer received'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Postcode" name="group_by_postcode" context="{'group_by':'postcode'}"/>
                </group>

            </search>
        </field>
    </record>

    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
